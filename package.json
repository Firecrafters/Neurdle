    "postcss": "^8.4.29",
    "sass": "^1.91.0",
    "stylelint": "^16.23.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "typescript": "^5.9.2",
    "yarn": "^1.22.22"
  },
  "type": "module"
}
